<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/test"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Optimizing Crop Selection in India: A Seasonal Guide for Sustainable Farming"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#303F9F"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/introTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agriculture in India is highly dependent on the diverse climatic conditions experienced throughout the year. Proper crop selection according to seasons is essential for farmers to maximize profit, enhance production, and ensure sustainable farming practices. In this guide, we will explore various ways and techniques that farmers in India can adopt for optimal crop selection, aiming to strike a balance between economic prosperity and environmental preservation."
            android:textSize="16sp"
            android:textColor="#000000"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- Section 1 -->
        <TextView
            android:id="@+id/section1TitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Kharif Season (June to October)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#00796B"
            android:layout_marginBottom="8dp"/>

        <!-- Subsection a -->
        <TextView
            android:id="@+id/subsection1aTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="a. Paddy (Rice):"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="4dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/paddy"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/subsection1aContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Well-suited for the monsoon season, paddy requires abundant water."
            android:textSize="16sp"
            android:textColor="#000000"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/subsection1abContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Techniques such as System of Rice Intensification (SRI) can enhance productivity while using water efficiently."
            android:textSize="16sp"
            android:textColor="#000000"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- Subsection b -->
        <TextView
            android:id="@+id/subsection1bTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="b. Maize:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="4dp"/>
